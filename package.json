{
  "name": "@quikim/cli",
  "version": "0.1.0",
  "description": "Quikim CLI - Authenticate, manage projects, and run MCP server from the command line",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "quikim": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "mcp": "node dist/index.js mcp serve",
    "mcp-inspector": "npx @modelcontextprotocol/inspector node dist/index.js mcp serve",
    "test": "npm run build && node --test dist/**/*.test.js",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "quikim",
    "cli",
    "mcp",
    "cursor",
    "project-management",
    "development"
  ],
  "author": "Quikim Pvt. Ltd.",
  "license": "AGPL-3.0",
  "dependencies": {
    "@modelcontextprotocol/inspector": "^0.19.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "chalk": "^5.3.0",
    "cheerio": "^1.2.0",
    "chokidar": "^3.6.0",
    "commander": "^12.1.0",
    "conf": "^13.0.1",
    "diff-match-patch": "^1.0.5",
    "fast-xml-parser": "^4.3.0",
    "glob": "^11.0.0",
    "ignore": "^6.0.0",
    "inquirer": "^9.3.7",
    "marked": "^17.0.1",
    "ora": "^8.1.0",
    "turndown": "^7.2.2",
    "uuid": "^9.0.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/diff-match-patch": "^1.0.36",
    "@types/inquirer": "^9.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/marked": "^5.0.2",
    "@types/node": "^22.10.0",
    "@types/turndown": "^5.0.6",
    "@types/uuid": "^9.0.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/quikim/quikim.git",
    "directory": "cli"
  }
}
